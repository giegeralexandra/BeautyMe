<!DOCTYPE html>
<html>
  <head>
    <title>BeautyMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% if logged_in? %> 
      <%= link_to "Logout", logout_path, method: "delete" %>  |  
      <%= link_to "Profile", user_path(current_user) %> |  
      <%= link_to "Add Appointment", new_appointment_path %>  |  
      <%= link_to "All Appointments", appointments_path %> |  
      <%= link_to "Add Category", new_category_path %> |  
      <%= link_to "All Categories", categories_path %> |  
      <%= link_to "Add Customer", new_customer_path %> |  
      <%= link_to "All Customers", customers_path %>
      <% else %>
      <%= link_to "Sign Up", signup_path %>  |  
      <%= link_to "Login", login_path %>
      <% end %> 
    </div>
    <%= yield %>
  </body>
</html>
