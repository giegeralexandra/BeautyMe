<h1>Upcoming Appointments</h1>
<br>

<%= week_calendar( events: @appointments) do |date, meetings| %>
    <%= date %>
  
    <% meetings.each do |meeting| %>
      <div>
        <%= link_to appointment_name(meeting), appointment_path(meeting) %> - <%= time meeting %>
      </div>
    <% end %>
<% end %>